{
	"schemaVersion": 1,
	"id": "giftit",
	"version": "${version}",

	"name": "Gift It!",
	"description": "Wrap your blocks into gifts and offer them your friends.",
	"authors": [
		"Siphalor"
	],
	"contact": {
		"homepage": "https://github.com/Siphalor/giftit",
		"sources": "https://github.com/Siphalor/giftit",
		"issues": "https://github.com/Siphalor/giftit/issues"
	},

	"license": "MIT",
	"icon": "assets/giftit/icon.png",

	"environment": "*",
	"entrypoints": {
		"main": [
			"de.siphalor.giftit.GiftIt"
		],
		"client": [
			"de.siphalor.giftit.client.ClientCore"
		],
		"tweed:config": [
			"de.siphalor.giftit.GiftIt::CONFIG"
		]
	},
	"mixins": [
		"giftit.mixins.json"
	],

	"depends": {
		"fabricloader": ">=0.4.0",
		"fabric-blockrenderlayer-v1": "*",
		"fabric-networking-blockentity-v0": "*",
		"fabric-object-builder-api-v1": "*",
		"fabric-rendering-v1": "*",
		"fabric-tag-extensions-v0": "*"
	}
}
